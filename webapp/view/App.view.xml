<mvc:View

   controllerName="sap.ui.demo.walkthrough.controller.App"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   displayBlock="true">
<Shell>
   <App>
      <pages>
         <Page title="{i18n>TituloDaPagina}">
            <content>
               <Panel headerText="{i18n>TituloDoPainel}" >
                  
                  <content>   
                     <Input class="botaoPadrao" value="{/recipient/name}" width="50%" valueLiveUpdate="true"/>
                     <Button text="{i18n>BotaoOlaTexto}" press="onMostrarMensagemOla"/>
                  </content>

                  <content>
                     <Input class="botaoPadrao" value="{/recipient/name}" width="50%" valueLiveUpdate="true" />
                     <Button text= "{i18n>BotaoOiTexto}" press="onMostrarMensagemOi"/> 
                  </content>

               </Panel>
            </content>
         </Page>
      </pages>
   </App>
</Shell>
</mvc:View>
